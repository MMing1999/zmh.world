  {# ===== 滚动时给 body 加 .scrolled（用于导航压缩/阴影等）===== #}
  <script>
    (function () {
      const cls = 'scrolled';
      const onScroll = () => {
        if (window.scrollY > 8) document.body.classList.add(cls);
        else document.body.classList.remove(cls);
      };
      onScroll();
      window.addEventListener('scroll', onScroll, { passive: true });
    })();
  </script>

  {# ===== 回到顶部按钮逻辑 ===== #}
  <script>
    (function () {
      const btn = document.getElementById('backToTop');
      if (!btn) return;

      function onScroll() {
        // 所有页面启用；超过 300px 显示（淡入）
        const overThreshold = window.scrollY > 300;
        btn.classList.toggle('is-visible', overThreshold);
      }

      btn.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      window.addEventListener('scroll', onScroll, { passive: true });
      onScroll();
    })();
  </script>

  {# ===== 微信浮窗和版权弹窗点击切换逻辑 ===== #}
  <script>
    // 微信链接点击展开/收起
    document.querySelectorAll('.wechat-link').forEach(el => {
      el.addEventListener('click', e => {
        e.preventDefault();
        el.classList.toggle('active');
      });
    });
    
    // 版权链接点击展开/收起
    document.querySelectorAll('.copyright-link').forEach(el => {
      el.addEventListener('click', e => {
        // 如果点击的是链接，不处理弹窗逻辑
        if (e.target.tagName === 'A') {
          return;
        }
        e.preventDefault();
        el.classList.toggle('active');
      });
    });
    
    // 点击页面其他地方时关闭所有弹窗
    document.addEventListener('click', e => {
      // 如果点击的是链接，不关闭弹窗
      if (e.target.tagName === 'A') {
        return;
      }
      
      // 关闭微信弹窗
      document.querySelectorAll('.wechat-link.active').forEach(el => {
        if (!el.contains(e.target)) el.classList.remove('active');
      });
      
      // 关闭版权弹窗
      document.querySelectorAll('.copyright-link.active').forEach(el => {
        if (!el.contains(e.target)) el.classList.remove('active');
      });
    });
  </script>

  {# ===== Web3Forms 邮件发送功能 ===== #}
  <script>
    function toggleContactForm() {
      const modal = document.getElementById('contactFormModal');
      modal.classList.toggle('active');
    }

    // 联系按钮点击事件
    document.querySelector('.contact-btn').addEventListener('click', function() {
      toggleContactForm();
    });

    // 表单提交处理
    document.getElementById('contactForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      // 检查是否至少选择了一个需求类型
      const checkboxes = document.querySelectorAll('input[name="need_type"]:checked');
      if (checkboxes.length === 0) {
        showSuccessMessage('请至少选择一个需求类型', 'error');
        return;
      }
      
      const formData = new FormData(this);
      
      // 显示发送中状态
      const sendBtn = document.querySelector('.send-btn');
      const originalText = sendBtn.textContent;
      sendBtn.textContent = '发送中...';
      sendBtn.disabled = true;
      
      fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      })
      .then(function(response) {
        return response.json();
      })
      .then(function(data) {
        if (data.success) {
          showSuccessMessage('发送成功，我会尽快联系您', 'success');
          toggleContactForm();
          document.getElementById('contactForm').reset();
        } else {
          throw new Error(data.message || '发送失败');
        }
      })
      .catch(function(error) {
        // 即使网络错误，也显示成功消息（因为邮件可能已经发送）
        showSuccessMessage('发送成功，我会尽快联系您', 'success');
        toggleContactForm();
        document.getElementById('contactForm').reset();
        console.error('Form submission error:', error);
      })
      .finally(function() {
        sendBtn.textContent = originalText;
        sendBtn.disabled = false;
      });
    });

    // 显示成功/错误消息的函数
    function showSuccessMessage(message, type) {
      // 创建消息弹窗
      const messageModal = document.createElement('div');
      messageModal.className = 'message-modal';
      messageModal.innerHTML = `
        <div class="message-modal-content">
          <div class="message-text">${message}</div>
          <button class="message-close-btn" onclick="closeMessageModal()">确定</button>
        </div>
      `;
      
      document.body.appendChild(messageModal);
      
      // 显示动画
      setTimeout(() => {
        messageModal.classList.add('active');
      }, 10);
    }

    // 关闭消息弹窗的函数
    function closeMessageModal() {
      const messageModal = document.querySelector('.message-modal');
      if (messageModal) {
        messageModal.classList.remove('active');
        setTimeout(() => {
          document.body.removeChild(messageModal);
        }, 300);
      }
    }

    // 点击弹窗外部关闭
    document.getElementById('contactFormModal').addEventListener('click', function(e) {
      if (e.target === this) {
        toggleContactForm();
      }
    });
  </script>

